{
  "parser": "babel-eslint",
  "env": {
    "browser": true
  },
  "extends": "airbnb",
  "rules": {
    "jsx-a11y/no-static-element-interactions": "off",
    "jsx-a11y/no-noninteractive-element-interactions": "warn",
    "no-shadow": "off",
    /* remove when bug fixed https://github.com/babel/babel-eslint/issues/530 */
    "object-curly-newline": "warn",
    "template-curly-spacing": "off",
    "comma-dangle": "off",
    "arrow-parens": "off",
    "indent": "off",
    "max-len": "warn"
  },
  "globals": {
    "window": true,
    "document": true,
    "localStorage": true,
    "API_URL": true,
    "PRODUCTION": true
  }
}
